{{> menu}}

<form class="ui stacked segment form" action="/reading/{{station.name}}/updatereading/{{reading.id}}" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="00" type="text" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temp</label>
      <input placeholder="00.00C" type="text" name="temp" value="{{reading.temp}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00.00kMh" type="text" name="windSpeed" value="{{reading.windSpeed}}">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="000 deg" type="text" name="windDir" value="{{reading.windDirection}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="000 hPa" type="text" name="pressure" value="{{reading.pressure}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Reading</button>
</form>
