<section class="ui segment" action="/stations/${_station.id}/addlastreadings" method="POST">
    <div class="ui five inverted stackable cards">
       <div class="card">
            <div class="extra">
                <h3 class="header">
                    <i class=" right floated map marker icon large purple"></i>
                    {{name}}{{station.name}}
                </h3>
                <h4> 
                    Lat: {{station.latitude}}
                    <br>
                    Lng:{{station.longitude}}
                </h4>
            </div>
        </div>
        <div class="card">
            <div class="extra">
                <h3 class="header">
                    Weather
                </h3>
                <h4 class="header"> {{stationSummary.weatherCode}}
                  <i class="{{stationSummary.weatherCodeIcons}} large white"></i>
                </h4>
            </div>
        </div>
        <div class="card">
            <div class="extra">
                <h3 class="header">
                    Temp <i class="right floated temperature high icon large blue"></i>
                </h3>
                <h4 class="header">
                      {{stationSummary.tempC}} C
                      <br>
                     {{stationSummary.tempF}} F
                    <br>
                     Max: {{stationSummary.maxTemp}}
                      <br>
                      Min: {{stationSummary.minTemp}}
                </h4>
            </div>
        </div>
        <div class="card">
            <div class="extra">
                <h3 class="header">
                    Wind <i class="right floated wind icon green extra large"></i>
                </h3>
                <h4 class="header">
                    {{stationSummary.beaufort}} bft
                    <br>
                   {{stationSummary.windComp}} 
                    <br>
                    Feels like: {{stationSummary.windChill}} 
                    <br>
                    Max: {{stationSummary.maxWind}}
                    <br>
                    Min: {{stationSummary.minWind}}
          
                </h4>
            </div>
        </div>
        <div class="card">
            <div class="extra">
                <h3 class="header">
                    Pressure <i class="right floated arrows alternate icon orange extra large"></i>
                </h3>
                <h4 class="header">
                      {{stationSummary.Pressure}} hpa
                    <br>
                    Max: {{stationSummary.maxPressure}}
                    <br>
                    Min: {{stationSummary.minPressure}}
                </h4>
            </div>
        </div>
    </div>
</section>